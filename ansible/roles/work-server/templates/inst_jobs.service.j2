[Unit]
Description=Canvas job processing service
After=multi-user.target

[Service]
Type=forking
User=deploy
KillMode=none
SendSIGKILL=no
LimitNOFILE=8192

EnvironmentFile=-/etc/environment

WorkingDirectory=/var/www/ftc_results/current/

ExecStart=/var/www/ftc_results/current/bin/inst_jobs start
ExecStop=/var/www/ftc_results/current/bin/inst_jobs stop

PIDFile=/var/www/ftc_results/shared/tmp/pids/delayed_jobs_pool.pid

Restart=on-failure