upstream puma_ftc_results {
  server unix:///var/www/ftc_results/shared/tmp/sockets/puma.sock fail_timeout=0;
}

server {
  listen 80;
  server_name {{ server_name | trim }};
  root /var/www/ftc_results/current/public;
  try_files $uri/index.html $uri @puma_ftc_results;

  client_max_body_size 4G;
  keepalive_timeout 10;

  error_page 500 502 504 /500.html;
  error_page 503 @503;

  location /.well-known/acme-challenge {
      root /var/www/letsencrypt;
      try_files $uri $uri/ =404;
  }

  location @puma_ftc_results {
    proxy_set_header Host $host;
    proxy_redirect off;
    proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
    set $doctored_scheme $scheme;
    if ($http_x_amz_cf_id) {
      set $doctored_scheme "https";
    }
    proxy_set_header  X-Forwarded-Proto $doctored_scheme;
    proxy_pass http://puma_ftc_results;
    # limit_req zone=one;
    access_log /var/www/ftc_results/shared/log/nginx.access.log;
    error_log /var/www/ftc_results/shared/log/nginx.error.log;
  }

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location = /50x.html {
    root html;
  }

  location = /404.html {
    root html;
  }

  location @503 {
    error_page 405 = /system/maintenance.html;
    if (-f $document_root/system/maintenance.html) {
      rewrite ^(.*)$ /system/maintenance.html break;
    }
    rewrite ^(.*)$ /503.html break;
  }

  if ($request_method !~ ^(GET|HEAD|PUT|PATCH|POST|DELETE|OPTIONS)$ ){
    return 405;
  }

  if (-f $document_root/system/maintenance.html) {
    return 503;
  }
}
